<?php use Phalcon\Tag as Tag; ?>

<?= $this->getContent() ?>

<?php foreach ($posts->items as $post){ ?>

<article class="post">
	<h2  class="post-title"><?= Tag::linkTo('p/'.$post->slug, $post->subject) ?></h2>
	<div class="post-date"><?= $post->timestamp ?></div>
	<div class="post-text"><?= $post->message ?></div>
</article>

<?php } ?>


<?php if ($posts->first != $posts->total_pages) {?>

<article class="paginator">
	<?php if ($posts->current != $posts->first) {?>
		<a class="paginator-item left" href="?page=<?= $posts->before; ?>"><i class="fa fa-angle-double-left"></i> Предыдущая</a>
	<?php } ?>

	<?php if ($posts->current != $posts->last) {?>
		<a class="paginator-item right" href="?page=<?= $posts->next; ?>">Следующая <i class="fa fa-angle-double-right"></i></a>
	<?php } ?>
</article>

<?php } ?>